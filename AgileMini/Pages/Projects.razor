@page "/projects"


@using AgileMini.Data
@inject DataService DataService

<h1>Проекты</h1>



@if (projects == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Состояние</th>
                <th>Дата создания</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in projects)
            {
                <tr>
                    <td>@project.Name</td>
                    <td>@project.State</td>
                    <td>@project.CreationDate</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Project[]? projects;

    protected override async Task OnInitializedAsync()
    {
        projects = await DataService.GetProjects();
    }
}
