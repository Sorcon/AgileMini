@page "/users"


@using AgileMini.Data
@inject DataService DataService

<h1>Сотрудники</h1>


@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div>
        <button @onclick="ShowAddUser">Добавить</button>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <th><button @onclick="() => ShowEditUser(user)">Изменить</button></th>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private User[]? users;

    protected override async Task OnInitializedAsync()
    {
        users = await DataService.GetUsers();
    }

